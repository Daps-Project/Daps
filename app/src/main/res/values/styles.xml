<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/vibrant_blue</item>
        <item name="colorPrimaryDark">@color/vibrant_blue</item>
        <item name="colorAccent">@color/vibrant_blue</item>
        <item name="android:textColorHint">@color/vibrant_blue</item>
        <!-- Don't draw a title bar -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TitleBlack">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HeadingTextWhite">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingMultiplier">1.33</item>
    </style>

    <style name="HeadingTextBold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:lineSpacingMultiplier">1.33</item>
    </style>

    <style name="BodyText">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingMultiplier">1.33</item>
    </style>
</resources>
